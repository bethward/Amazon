@{
}

@model IEnumerable<string>

<div class="btn-block d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum ="1" class="btn btn-block btn-outline-secondary ">Home</a>

    @foreach (string c in Model)
    {
       <a asp-controller="Home" asp-action="Index" asp-route-category="@c" asp-route-pageNum="1"
          class="btn @(ViewBag.SelectedType == c ? "btn-primary" : "btn-outline-secondary") btn-block">@c</a>   
    }
</div>